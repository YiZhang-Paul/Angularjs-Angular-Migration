{
    "name": "sample-angularjs-migration",
    "version": "0.1.0",
    "description": "sample application to demonstrate angularjs migration",
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "src/**/*.interface.ts",
            "src/**/tests"
        ],
        "extension": [
            ".ts"
        ],
        "reporter": [
            "text",
            "text-summary"
        ],
        "require": [
            "ts-node/register"
        ],
        "sourceMap": true,
        "instrument": true,
        "all": true
    },
    "scripts": {
        "lint": "tslint -c tslint.json 'src/**/*.ts'",
        "build": "npm run lint && tsc && cp -r config dist/backend",
        "rebuild": "rm -rf dist && npm run build",
        "server": "cd dist/backend && node server",
        "api": "cd dist/backend && node apis/v1/app",
        "dev": "nodemon -e ts --exec \"npm start\"",
        "start": "npm run build && concurrently \"npm run api\" \"npm run server\"",
        "test": "npm run build && set NODE_ENV=testing&& set DB_USER=testdb2019&& set DB_PASSWORD=testdb2019&& nyc mocha --opts \"mocha.opts\" \"src/**/*.spec.ts\"",
        "test-int": "npm run build && set NODE_ENV=testing&& set DB_USER=testdb2019&& set DB_PASSWORD=testdb2019&& nyc mocha --opts \"mocha.opts\" \"src/**/integration-tests/**/*.spec.ts\"",
        "test-unit": "npm run build && nyc mocha --opts \"mocha.opts\" \"src/**/unit-tests/**/*.spec.ts\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/YiZhang-Paul/Angularjs-Angular-Migration.git"
    },
    "author": "Yi Zhang",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/YiZhang-Paul/Angularjs-Angular-Migration/issues"
    },
    "homepage": "https://github.com/YiZhang-Paul/Angularjs-Angular-Migration#readme",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "concurrently": "^4.1.0",
        "config": "^3.0.1",
        "express": "^4.16.4",
        "jsonwebtoken": "^8.4.0",
        "mongoose": "^5.4.3",
        "validator": "^10.10.0",
        "xss": "^1.0.3"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/config": "0.0.34",
        "@types/express": "^4.16.0",
        "@types/mocha": "^5.2.5",
        "@types/mongodb": "^3.1.18",
        "@types/mongoose": "^5.3.7",
        "@types/node": "^10.12.18",
        "@types/sinon": "^7.0.3",
        "@types/superagent": "^3.8.6",
        "@types/validator": "^10.9.0",
        "chai": "^4.2.0",
        "chai-http": "^4.2.1",
        "mocha": "^5.2.0",
        "nodemon": "^1.18.9",
        "nyc": "^13.1.0",
        "sinon": "^7.2.2",
        "source-map-support": "^0.5.10",
        "ts-node": "^7.0.1",
        "tslint": "^5.12.0",
        "tslint-microsoft-contrib": "^6.0.0",
        "typescript": "^3.2.2"
    }
}
